# MMT Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URL=mongodb://localhost:27017/mmt_database

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
JWT_EXPIRE=7d

# CORS Configuration (comma-separated list of allowed origins)
CORS_URLS=http://localhost:3000,http://localhost:5000

# Logging (optional)
LOG_LEVEL=info

# Papertrail (optional - for remote logging)
PAPERTRAIL_HOST=
PAPERTRAIL_PORT=
PAPERTRAIL_PROGRAM=mmt-backend

# File Upload (optional)
MAX_FILE_SIZE=10mb
