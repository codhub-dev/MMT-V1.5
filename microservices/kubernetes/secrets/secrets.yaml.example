# Kubernetes Secrets Configuration
# IMPORTANT: This is an example file. Create actual secrets file and DO NOT commit to git.
#
# To create actual secrets:
# 1. Copy this file: cp secrets.yaml.example secrets.yaml
# 2. Replace all placeholder values with actual secrets
# 3. Apply to cluster: kubectl apply -f secrets.yaml
# 4. Add secrets.yaml to .gitignore

apiVersion: v1
kind: Secret
metadata:
  name: mmt-secrets
  namespace: mmt
type: Opaque
stringData:
  # JWT Secret (change this!)
  jwt-secret: "your-super-secret-jwt-key-change-this-in-production"

  # MongoDB Connection Strings
  mongodb-uri-auth: "mongodb://admin:password@mongodb:27017/mmt_auth_db?authSource=admin"
  mongodb-uri-fleet: "mongodb://admin:password@mongodb:27017/mmt_fleet_db?authSource=admin"
  mongodb-uri-finance: "mongodb://admin:password@mongodb:27017/mmt_finance_db?authSource=admin"
  mongodb-uri-analytics: "mongodb://admin:password@mongodb:27017/mmt_analytics_db?authSource=admin"
  mongodb-uri-notifications: "mongodb://admin:password@mongodb:27017/mmt_notifications_db?authSource=admin"

  # RabbitMQ Connection
  rabbitmq-url: "amqp://admin:password@rabbitmq:5672"

  # Google OAuth (optional, for Google Sign-In)
  google-client-id: "your-google-client-id.apps.googleusercontent.com"
  google-client-secret: "your-google-client-secret"

---
# ConfigMap for MongoDB (if deploying MongoDB in Kubernetes)
apiVersion: v1
kind: Secret
metadata:
  name: mongodb-secret
  namespace: mmt
type: Opaque
stringData:
  mongodb-root-username: "admin"
  mongodb-root-password: "change-this-password-in-production"

---
# ConfigMap for RabbitMQ (if deploying RabbitMQ in Kubernetes)
apiVersion: v1
kind: Secret
metadata:
  name: rabbitmq-secret
  namespace: mmt
type: Opaque
stringData:
  rabbitmq-username: "admin"
  rabbitmq-password: "change-this-password-in-production"
